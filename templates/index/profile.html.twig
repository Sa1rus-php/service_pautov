{% extends 'base.html.twig' %}

{% block title %}Сервіс{% endblock %}

{% block body %}
    <section style="background-color: #eee;">
        <div class="container py-5">

            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_index') }}">Домашня сторінка</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Профіль користувача</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">{{ user.fio }}</h5>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="{{ path('app_logout') }}" class="btn btn-primary">Вийти з облікового запису</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Прізвище Ім'я По батькові</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ user.fio }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Пошта</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ user.email }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Номер телефону</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ user.phoneNumber }}</p>
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card mb-4 mb-md-0">
                        <div class="card-body">
                            <p class="mb-4"><span class="text-primary font-italic me-1">Записи</span></p>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">Назва</th>
                                    <th scope="col">Дата запису</th>
                                    <th scope="col">Дії</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for order in orders %}
                                        <form action=" {{ path('delete_order') }}" method="post">
                                            <tr>
                                                <td>{{ order.product.name }}</td>
                                                <input name="order_id" value="{{ order.id }}" hidden="hidden">
                                                <td>{{ order.orderDate.format('Y-m-d H:i:s') }}</td>
                                                <td><button type="submit" class="btn btn-danger">Скасовувати</button></td>
                                            </tr>
                                        </form>
                                        {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <div class="card mb-4 mb-md-0">
                        <div class="card-body">
                            <p class="mb-4"><span class="text-primary font-italic me-1">Відгуки</span></p>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">Заголовок</th>
                                    <th scope="col">Текст</th>
                                    <th scope="col">Дії</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for review in reviews %}
                                    <form method="post" action=" {{ path('delete_review') }}">
                                        <input name="review_id" value="{{ review.id }}" hidden="hidden">
                                        <tr>
                                            <td>{{ review.title}}</td>
                                            <td>{{ review.body }}</td>
                                            <td><button type="submit" class="btn btn-danger">Видалити</button></td>
                                        </tr>
                                    </form>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <h2>Залишити відгук</h2>
                    <form method="post" action="{{ path('create_review') }}">
                        <div class="mb-3">
                            <label for="title" class="form-label">Заголовок</label>
                            <input type="text" class="form-control" name="title">
                        </div>
                        <div class="mb-3">
                            <label for="body" class="form-label">Текст</label>
                            <textarea class="form-control" name="body" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Залишити відгук</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}